<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:typeface">sans</item>
    <item name="android:windowBackground">@color/bg_color</item>
  </style>

  <!-- Base application theme. -->
  <style name="LightActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>


  <style name="Button" parent="Widget.AppCompat.Button">
    <item name="android:textColor">@color/lightBlack</item>
    <item name="android:layout_height">@dimen/dimes_48dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">16sp</item>
    <item name="android:background">@drawable/button_bg</item>
    <item name="android:foreground">?selectableItemBackground</item>
  </style>


  <style name="Button.Login" parent="Button">
    <item name="android:textColor">@color/dark_green</item>
    <item name="android:textSize">15sp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:layout_margin">@dimen/dimes_16dp</item>
    <item name="android:background">@drawable/button_round_background</item>
    <item name="android:minWidth">@dimen/dimes_328dp</item>
  </style>

</resources>
