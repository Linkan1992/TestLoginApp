<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">sans</item>
        <item name="android:windowBackground">@color/bg_color</item>
    </style>


    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/toolbar_height</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <style name="TextStyle.ToolbarCustomTitle" parent="TextStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>



    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:layout_height">@dimen/dimes_48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">@color/lightBlack</item>
    </style>

    <style name="TextStyle.Heading" parent="TextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.EditText" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:minHeight">@dimen/dimes_50dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@color/medium_black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/dimes_16dp</item>
        <item name="android:background">@drawable/input_border_background</item>
    </style>


    <style name="Button.Login" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_margin">@dimen/dimes_16dp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:minWidth">@dimen/dimes_328dp</item>
    </style>

</resources>
